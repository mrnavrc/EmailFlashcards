@model EmailFlashcards.Models.Flashcard

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Flashcard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Flashcards">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlashcardTitle" class="control-label"></label>
                <input asp-for="FlashcardTitle" class="form-control" />
                <span asp-validation-for="FlashcardTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlashcardText" class="control-label"></label>
                <input asp-for="FlashcardText" class="form-control" />
                <span asp-validation-for="FlashcardText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="control-label">Categories</label>
                <select name="CategoryList" class="form-control" asp-items="ViewBag.CategoryList" multiple>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
